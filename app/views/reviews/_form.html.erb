<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
	<div id="rating-form">
		<label>評価</label>
	</div>
	<%= f.input :comment, label: "コメント" %>
	<%= f.button :submit, "投稿する" %>
<% end %>

<script type="text/javascript">
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>